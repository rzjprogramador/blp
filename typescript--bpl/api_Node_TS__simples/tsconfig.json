{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },

  "typeRoots": ["node_modules/@types"],

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", ".docker"]
}
